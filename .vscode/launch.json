{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Health Assistant",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main.exe",  // Make sure this points to your executable
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,  // Runs in external console
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
